<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="16" styleClass="login-root" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.CreateAccountController">


    <Label styleClass="login-title" text="ToDo Manager" />

    <Label styleClass="login-subtitle" text="Neues Konto erstellen" />

    <VBox maxWidth="320" spacing="12" styleClass="login-card">

        <TextField fx:id="emailField" promptText="E-Mail" styleClass="login-input" />

        <TextField fx:id="nameField" promptText="Name" styleClass="login-input" />

        <PasswordField fx:id="passwordField" promptText="Passwort" styleClass="login-input" />

        <Label fx:id="errorLabel" styleClass="login-error" />
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="30.0">
         <children>
      
              <Button onAction="#createNewAccountClick" styleClass="login-button" text="Create Account" />
      
              <Button onAction="#onBackToLoginClick" styleClass="login-button" text="ZurÃ¼ck zum Login" />
         </children>
      </HBox>
    </VBox>

</VBox>
